@model List<GymManager.Core.Members.Member>



<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">lastName</th>
      <th scope="col">Birthday</th>
      <th scope="col">Email</th>
       <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
   
      @foreach (var member in Model)
     {
         <tr>
              <th scope="row">@member.Name</th>
              <td>@member.LastName</td>
               <td>@member.Birthday.ToString("dd/mm/yyyy")</td>
                <td>@member.Email</td>


                <td>
                    <a asp-action="Edit"  asp-route-memberId="@member.Id" class="btn btn-outline-info">Edit</a>
                </td>

                <td>
                    <a asp-action="Delete"  asp-route-memberId="@member.Id" class="btn btn-outline-danger">Delete</a>
                </td>

         </tr>
     }

  </tbody>
</table>