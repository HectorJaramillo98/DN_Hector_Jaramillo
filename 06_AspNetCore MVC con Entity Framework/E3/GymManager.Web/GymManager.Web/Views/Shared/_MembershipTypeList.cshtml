@model List<GymManager.Core.MembershipTypes.MembershipType>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Cost</th>
            <th scope="col">Created On</th>
            <th scope="col">Duration</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var membershipType in Model)
        {
            <tr>
                <td scope="row">@membershipType.Name</td>
                <td>$ @membershipType.Cost  USD</td>
                <td>@membershipType.CreatedOn.ToString("dd/MM/yyyy ")</td>
                <td>@membershipType.Duration</td>
                <td><a asp-action="Edit" class="btn btn-outline-info" asp-route-membershipTypeId="@membershipType.Id">Edit</a></td>
                <td><a asp-action="Delete" class="btn btn-outline-danger" asp-route-membershipTypeId="@membershipType.Id">Delete</a></td>
            </tr>

        }
    </tbody>
</table>